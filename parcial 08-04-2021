numero1 = float(input("Digite el numero uno"))
numero2 = float(input("Digite el numero dos"))
numero3 = float(input("Digite el numero tres"))

suma= numero1 + numero2 + numero3
print ("El resultado de la suma es:",suma)

resta= numero1 - numero2 - numero3
print("El resultado de la resta es :",resta)

multiplicacion= numero1*numero2*numero3
print("El resultado de la multiplicacion es :",multiplicacion)

division= numero1/numero2/numero3
print("El resultado de la division es:",division)

